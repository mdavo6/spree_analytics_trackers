<% if tracker = Spree::Tracker.current(:google_analytics) %>
  <script>
    if (typeof ga !== 'undefined') {
      <% products.each_with_index do |product, index| %>
        ga('ec:addImpression',
          <% if @taxon %>
            <%= product_for_google(product, position: index+1, list: @taxon.name) %>
          <% else %>
            <%= product_for_google(product, position: index+1, list: products) %>
          <% end %>
        );
      <% end %>
      ga('set', 'dimension3','category');
    }
  </script>
<% end %>
